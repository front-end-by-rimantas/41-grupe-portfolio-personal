{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "tabWidth": 4
            },
            "excludeFiles": "*.min.css"
        },
        {
            "files": "*.html",
            "options": {
                "tabWidth": 4,
                "printWidth": 1000
            },
            "excludeFiles": "*.min.css"
        },
        {
            "files": "*.js",
            "options": {
                "tabWidth": 4
            },
            "excludeFiles": "*.min.js"
        }
    ]
}
